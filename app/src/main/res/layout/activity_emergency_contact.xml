<!-- res/layout/activity_emergency_contact.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Emergency_Contact">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/back_btn"
        android:padding="10dp"
        android:clickable="true"/>
    <TextView
        android:id="@+id/EmergencyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMERGENCY CONTACT"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/emergencyContactNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Enter Emergency Contact Name" />

    <EditText
        android:id="@+id/emergencyContactEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emergencyContactNameEditText"
        android:layout_margin="16dp"
        android:hint="Enter Emergency Contact Number"
        android:inputType="phone"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emergencyContactEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Save"/>

    <!-- Add this TextView to display the saved emergency contact information -->
    <TextView
        android:id="@+id/displayEmergencyContactTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="18sp"/>

</RelativeLayout>